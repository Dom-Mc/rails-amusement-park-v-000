<h1>List of Users</h1>

<ul>
  <% policy_scope(@users).each do |user| %>
    <li>Name: <%= user.name %></li>
    <li>Height: <%= user.height %></li>
    <li>Happiness: <%= user.happiness %></li>
    <li>Nausea: <%= user.nausea %></li>
    <li>Tickets: <%= user.tickets %></li>
    <% if user.admin? %>
      <li>Role: Admin</li>
    <% end %><br>
  <% end %>
</ul>
