<%= form_for(user) do |f| %>

  <%= render 'shared/error_messages', user: user if user.errors.any? %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control'  %>

    <%= f.label :height, "Height (in inches)" %>
    <%= f.number_field :height, in: 1..100, class: 'form-control'  %>

    <%= f.label :happiness, "How happy are you? (1-5 scale)" %>
    <%= f.number_field :happiness, in: 1..5, class: 'form-control'  %>

    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %>
    <%= f.number_field :nausea, in: 1..5, class: 'form-control'  %>

    <%= f.label :tickets, "How many dollars are in your pocket? (1-5 scale)" %>
    <%= f.number_field :tickets, in: 1..100, class: 'form-control'  %><br>

    <%= f.label "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %><br>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.submit nil, class: "btn btn-primary" %>

<% end %>
